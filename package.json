{
	"name": "document-pager",
	"version": "0.3.0",
	"description": "Document Pager: Displays a text document in tabbed pages.",
	"main": "main.js",
	"repository": "https://github.com/manngo/document-pager",
	"keywords": [],
	"author": "Mark Simon",
	"license": "CC0-1.0",
	"devDependencies": {

	},
	"dependencies": {
		"clipboard": "^2.0.4",
		"electron-log": "^4.0.2",
		"electron-reload": "^1.5.0",
		"ini": ">=1.3.6",
		"marked": "^0.7.0",
		"minimist": ">=1.2.3",
		"set-value": ">=2.0.1",
		"sudo-prompt": "^9.0.0",
		"temp": "^0.9.0",
		"yargs-parser": ">=13.1.2"
	},
	"productName": "Document Pager",
	"build": {
		"appId": "com.webcraft101.document-pager",
		"mac": {
			"category": "public.app-category.developer-tools",
			"target": [
				"zip", "dmg"
			],
			"icon": "images/edit-virtual-hosts.icns"
		},
		"win": {
			"target": [
				"zip", "nsis", "portable"
			],
			"icon": "images/edit-virtual-hosts.ico"
		},
		"nsis": {
			"oneClick": false,
			"perMachine": false,
			"allowElevation": true,
			"allowToChangeInstallationDirectory": true
		},
		"directories": {
			"output": "../electron-builder/${name}/${os}"
		}
	},
	"scripts": {
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder",
		"pack-win": "build --dir --win",
		"dist-win": "build --win"
	}
}
