{
	"name": "document-pager",
	"version": "0.3.52",
	"description": "Document Pager: Displays a text document in tabbed pages.",
	"main": "main.js",
	"repository": "https://github.com/manngo/document-pager",
	"keywords": [],
	"author": "Mark Simon",
	"license": "CC0-1.0",
	"dependencies": {
		"@electron/remote": "^2.0.8",
		"clipboard": "^2.0.11",
		"electron-log": "^4.4.7",
		"electron-notarize": "^1.2.1",
		"electron-osx-sign": "^0.6.0",
		"electron-packager": "^17.1.1",
		"electron-reload": "^1.5.0",
		"ini": ">=3.0.0",
		"marked": "^4.0.15",
		"minimist": ">=1.2.6",
		"set-value": ">=4.1.0",
		"sudo-prompt": "^9.2.1",
		"temp": "^0.9.4",
		"update": "^0.7.4",
		"yargs-parser": ">=21.0.1"
	},
	"productName": "Document Pager",
	"build": {
		"appId": "com.webcraft101.document-pager",
		"mac": {
			"category": "public.app-category.developer-tools",
			"target": {
				"target": "default",
				"arch": [
					"x64",
					"arm64"
				]
			},
			"icon": "images/document-pager.icns"
		},
		"win": {
			"target": [
				"zip",
				"nsis",
				"portable"
			],
			"icon": "images/document-pager.ico"
		},
		"nsis": {
			"oneClick": false,
			"perMachine": false,
			"allowElevation": true,
			"allowToChangeInstallationDirectory": true
		},
		"directories": {
			"output": "../electron-builder/${name}/${os}"
		}
	},
	"scripts": {
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder",
		"pack-win": "build --dir --win",
		"dist-win": "build --win"
	},
	"devDependencies": {
		"electron": "^24.1.0",
		"electron-builder": "^23.6.0"
	}
}
